<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.moizahmed.cameraapp.PreviewGIF">

    <VideoView
        android:id="@+id/videoHolder"
        android:layout_width="576dp"
        android:layout_height="796dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="110dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/layout_detail"
        android:layout_width="576dp"
        android:layout_height="896dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="90dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:contentPadding="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#e4ffffff"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:src="@drawable/lux"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="@drawable/et_bg"
            />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#ffffff"
                android:paddingLeft="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/et_bg"
                />

           <!-- <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="40dp"
                android:layout_marginL="40dp"

                android:gravity="bottom|right"
                android:background="@drawable/share"
                />-->
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="10dp">
        <Button
            android:id="@+id/reset"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/repeat"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_centerInParent="true"
            android:background="@drawable/share"

            />

    </LinearLayout>
</FrameLayout>
</layout>